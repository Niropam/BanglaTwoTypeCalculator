<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.calculator.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="90dp"
        android:text="Two Input Calculator"
        android:textStyle="italic|bold"
        android:textSize="30sp"
        android:textColor="@color/colorPrimary"/>
<Button
    android:id="@+id/calculator1"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="90dp"
    android:foreground="@drawable/ic_action_name_calculator"
    android:background="@color/colorAccent"
    android:onClick="calcu2i"
    />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="90dp"
        android:text="Age Calculator"
        android:textStyle="italic|bold"
        android:textSize="30sp"
        android:textColor="@color/colorBlack"/>
    <Button
        android:id="@+id/calculator2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="90dp"
        android:foreground="@drawable/ic_action_name_calender"
        android:background="@color/colorPrimary"
        android:onClick="agecalcu"
        />
    </LinearLayout>
</ScrollView>
